{
  "GlobalConfiguration": {
    //"AdministrationPath": "/administration",
    //"RequestIdKey": "OcRequestId",
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "host.docker.internal",
      "Port": 8500,
      "Type": "Consul"
    }
  },
  "Routes": [
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/api/v3/Authenticate/authenticate",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/authenticate",
      "UpstreamHttpMethod": [ "Post" ],
      "Priority": 1,
      "RequestIdKey": "authenticate"
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/api/v3/Authenticate/refresh-token",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/refresh-token",
      "UpstreamHttpMethod": [ "Get" ],
      "Priority": 1,
      "RequestIdKey": "refresh-token"
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/api/v3/User/register-account",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/register-account",
      "UpstreamHttpMethod": [ "Post" ],
      "Priority": 1,
      "RequestIdKey": "register-account",
      "DelegatingHandlers": [
        "RegisterAccountHandler"
      ]
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/api/v3/User/register-user",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/register-user",
      "UpstreamHttpMethod": [ "Post" ],
      "Priority": 1,
      "RequestIdKey": "register-user"
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/api/v3/User/change-password",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/change-password",
      "UpstreamHttpMethod": [ "Put" ],
      "Priority": 1,
      "RequestIdKey": "change-password"
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/swagger/v3/swagger.json",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/swagger",
      "UpstreamHttpMethod": [ "Post" ],
      "Priority": 2,
      "Key": "swagger"
    },
    {
      "ServiceName": "showcase-authenticate",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/swagger/v3/swagger.json",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/swagger1",
      "UpstreamHttpMethod": [ "Post" ],
      "Priority": 2,
      "Key": "swagger1",
      "DelegatingHandlers": [
        "SampleHandler"
      ]
    }
  ],
  "Aggregates": [
    {
      "RouteKeys": [
        "swagger",
        "swagger1"
      ],
      "UpstreamPathTemplate": "/swagger-detail",
      "UpstreamHttpMethod": [ "Post" ],
      "Aggregator": "SwaggerDetailAggregator"
    }
  ]
}
